{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "description": "Persistent conversation memory across sessions"
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:\\Users\\perc7\\Desktop\\dev\\43v3rAI-6"
      ],
      "description": "Access to project filesystem"
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "C:\\Users\\perc7\\Desktop\\dev\\43v3rAI-6"
      ],
      "description": "Git operations and repository history"
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://unifiedai_admin:dev_password@localhost:5432/unifiedai"
      ],
      "description": "PostgreSQL database operations",
      "disabled": true,
      "note": "Enable after starting Docker services with 'npm run docker:up'"
    },
    "api-testing": {
      "command": "node",
      "args": [
        "--loader",
        "tsx",
        "mcp-servers/api-testing/index.ts"
      ],
      "cwd": "C:\\Users\\perc7\\Desktop\\dev\\43v3rAI-6",
      "description": "API testing and debugging tools for backend endpoints"
    },
    "business-analytics": {
      "command": "python",
      "args": [
        "-m",
        "fastmcp",
        "run",
        "mcp-servers/business-analytics/server.py"
      ],
      "cwd": "C:\\Users\\perc7\\Desktop\\dev\\43v3rAI-6",
      "description": "Business metrics, KPIs, revenue data, and customer analytics"
    },
    "workflow-engine": {
      "command": "python",
      "args": [
        "-m",
        "fastmcp",
        "run",
        "mcp-servers/workflow-engine/server.py"
      ],
      "cwd": "C:\\Users\\perc7\\Desktop\\dev\\43v3rAI-6",
      "description": "Workflow automation and execution management"
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Web search capabilities",
      "disabled": true,
      "note": "Optional - requires BRAVE_API_KEY in environment"
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub API access for issues, PRs, etc.",
      "disabled": true,
      "note": "Optional - uses GITHUB_TOKEN from .env.local if enabled"
    }
  },
  "globalShortcuts": {
    "memory.store": "Store important context in memory",
    "memory.retrieve": "Retrieve stored context from memory",
    "git.status": "Check git status",
    "git.log": "View git history",
    "filesystem.read": "Read file contents",
    "filesystem.write": "Write to file",
    "api-testing.test_endpoint": "Test an API endpoint",
    "api-testing.test_backend_health": "Check 43v3rAI backend health",
    "business-analytics.get_dashboard_summary": "Get complete dashboard KPIs",
    "workflow-engine.list_workflows": "List all automation workflows",
    "workflow-engine.execute_workflow": "Run a workflow"
  }
}
